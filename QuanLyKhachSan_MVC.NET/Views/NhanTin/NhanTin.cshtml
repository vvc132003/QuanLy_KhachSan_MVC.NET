@model QuanLyKhachSan_MVC.NET.Models.Modeldata
<title>Chat</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: Arial, sans-serif;
    }

    .sidebar {
        border-right: 1px solid #ccc;
    }

    .employee-list {
        list-style: none;
        padding-left: 0;
    }

    .employee-item {
        cursor: pointer;
        padding: 8px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .employee-image {
        width: 40px; /* Độ rộng của ảnh */
        height: 40px; /* Độ cao của ảnh */
        border-radius: 50%; /* Viền cong để tạo ảnh tròn */
        margin-right: 10px; /* Khoảng cách giữa ảnh và văn bản */
    }

    .messages {
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
    }

    .input-container {
        background-color: #f0f0f0;
        padding: 10px;
    }

    .employee-list a {
        list-style: none;
        text-decoration: none;
        color: black;
    }
</style>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-3 sidebar">
            <ul class="employee-list">
                @if (Model.listnhanVien != null && Model.listnhanVien.Count > 0)
                {
                    foreach (var nhanvien in Model.listnhanVien)
                    {
                        <li class="employee-item"><a href="@nhanvien.id"><img src="@nhanvien.image" alt="" class="employee-image">@nhanvien.hovaten</a></li>
                    }
                }
                else
                {
                    <p>Không có nhân viên</p>
                }
            </ul>
        </div>
        <div class="col-md-9">
            @if (Model != null && Model.listTinNhanCaNhan != null && Model.nhanVien != null)
            {
                <div class="messages">
                    @foreach (var tinhan in Model.listTinNhanCaNhan.OrderBy(t => t.thoigiangui))
                    {
                        <p>@tinhan.idnhanviennhan</p>
                        if (tinhan.idnhanviengui == Model.nhanVien.id || tinhan.idnhanviennhan == Model.nhanVien.id)
                        {
                            if (tinhan.idnhanviengui == Model.nhanVien.id)
                            {
                                <div class="message sent">@tinhan.noidung</div>
                            }
                            else if (tinhan.idnhanviennhan == Model.nhanVien.id)
                            {
                                <div class="message received">@tinhan.noidung</div>
                            }
                        }
                    }
                </div>
            }
            else
            {
                <p>Dữ liệu không tồn tại hoặc có lỗi xảy ra.</p>
            }
            <div class="input-container">
            </div>
        </div>
    </div>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>