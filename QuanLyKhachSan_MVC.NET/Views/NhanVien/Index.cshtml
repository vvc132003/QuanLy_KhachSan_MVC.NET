@model List<Model.Models.Modeldata>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
<link href="~/content/static/morris.css" rel="stylesheet" />
<link href="~/content/static/c3.min.css" rel="stylesheet" />
<link href="~/content/static/style.css" rel="stylesheet" />
<link href="~/content/static/dashboard1.css" rel="stylesheet" />
<link href="~/content/static/home.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

@Html.Partial("~/Views/layout/logo.cshtml")

<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        @Html.Partial("~/Views/layout/navbar.cshtml")
        @Html.Partial("~/Views/layout/header.cshtml")
        <br />
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <br />
                            <ul class="nav justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link btn btn-success me-2" href="/NhanVien/XuatEclcel">
                                        <i class="fas fa-file-excel"></i>
                                        Xuất excel
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary me-2" href="/nhanvien/addnhanvien">
                                        <i class="fas fa-plus"></i>
                                        Thêm nhân viên
                                    </a>
                                </li>
                            </ul>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên nhân viên</th>
                                                <th>Số điện thoại</th>
                                                <th>Phường-Huyện-Tỉnh</th>
                                                <th>Số lần vi phạm</th>
                                                <th>CCCD</th>
                                                <th>Chức vụ</th>
                                                <th>Khách sạn</th>
                                                <th>Ảnh</th>
                                                <th>Trạng thái</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count > 0)
                                            {
                                                int count = 1;
                                                foreach (var modeldata in Model)
                                                {
                                                    var nhanvien = modeldata.PagedTNhanVien.First();
                                                    <tr id="row-@count">
                                                        <td>@count</td>
                                                        <td>@nhanvien.hovaten</td>
                                                        <td>@nhanvien.sodienthoai</td>
                                                        <td>@($"{nhanvien.phuong} - {nhanvien.huyen} - {nhanvien.tinh}")</td>
                                                        <td>@nhanvien.solanvipham</td>
                                                        <td>@nhanvien.cccd</td>
                                                        <td>
                                                            @if (modeldata.chucVu.tenchucvu.Equals("Quản lý"))
                                                            {
                                                                <p style="color: red;padding: 10px 10px;border-radius: 10%;">@modeldata.chucVu.tenchucvu</p>
                                                            }
                                                            else
                                                            {
                                                                <p style="color: #5eda73;padding: 10px 10px;border-radius: 10%;">@modeldata.chucVu.tenchucvu</p>
                                                            }
                                                        </td>
                                                        <td>@modeldata.khachSan.tenkhachsan</td>
                                                        <td>
                                                            <img src="@nhanvien.image" width="50px" height="50px" alt="@nhanvien.hovaten">
                                                        </td>
                                                        <td>@nhanvien.trangthai</td>
                                                        <td>
                                                            @if (modeldata.chucVu.tenchucvu.Equals("Quản lý"))
                                                            { }
                                                            else
                                                            {
                                                                <a href="/Tang/XoaTang/@nhanvien.id" class="btn btn-danger" title="Xoá">
                                                                    <i class="fas fa-times-circle"></i>
                                                                </a>
                                                                <a href="/nhanvien/updatenhanvien/?idnhanvien=@nhanvien.id" class="btn btn-warning" title="Cập nhật">
                                                                    <i class="fas fa-check-circle"></i>
                                                                </a>
                                                            }
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="12">Không có nhân viên nào!</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": false,
            "info": false,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 10,
            "lengthMenu": [5, 10, 25, 50, 100],
            "language": {
                "paginate": {
                    "next": '<i class="fas fa-chevron-right"></i>',
                    "previous": '<i class="fas fa-chevron-left"></i>'
                },
                "search": "Tìm kiếm:",
            }
        });
    });
</script>



@if (TempData["themthanhcong"] != null)
{
    <script>
        Swal.fire({
            position: "top-right",
            title: 'Thêm nhân viên thành công!',
            icon: "success",
            showConfirmButton: false,
            timer: 1500
        });
    </script>
}

@if (TempData["xoathanhcong"] != null)
{
    <script>
        Swal.fire({
            position: "top-right",
            title: 'Xoá nhân viên thành công!',
            icon: "success",
            showConfirmButton: false,
            timer: 1500
        });
    </script>
}
