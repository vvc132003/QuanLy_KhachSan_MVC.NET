<form method="post" action="/Home/TimKiemKhachSan">
    <div id="search">
        <div class="container">
            <div class="form-row">
                <div class="control-group col-md-3">
                    <label>Thành phố hoặc tên khách sạn</label>
                    <div class="form-group">
                        <div class="input-group date" id="date-3" data-target-input="nearest">
