@model Model.Models.Modeldata
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link href="~/css/home.css" rel="stylesheet" />
<link href="~/css/morris.css" rel="stylesheet" />
<link href="~/css/c3.min.css" rel="stylesheet" />
<link href="~/css/dashboard1.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        @Html.Partial("~/Views/layout/navbar.cshtml")
        @Html.Partial("~/Views/layout/header.cshtml")
        <br />
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <br />
                            <ul class="nav justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link btn btn-success me-2" href="/NhanVien/XuatEclcel">
                                        <i class="fas fa-file-excel"></i>
                                        Xuất excel
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary me-2" href="" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        <i class="fas fa-plus"></i>
                                        Thêm phòng cho khách sạn
                                    </a>
                                </li>
                            </ul>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Loại phòng</th>
                                                <th>Tình trạng phòng</th>
                                                <th>Gía tiền theo giờ</th>
                                                <th>Gía tiền theo ngày</th>
                                                <th>ID khách sạn</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.listPhongKhachSan != null && Model.listPhongKhachSan.Count > 0)
                                            {
                                                int count = 1;
                                                foreach (var phongkhachsan in Model.listPhongKhachSan)
                                                {
                                                    <tr id="row-@count">
                                                        <td>@count</td>
                                                        <td>@phongkhachsan.loaiphong</td>
                                                        <td>@phongkhachsan.tinhtrangphong</td>
                                                        <td>@phongkhachsan.giatientheogio</td>
                                                        <td>@phongkhachsan.giatientheongay</td>
                                                        <td>@phongkhachsan.idkhachsan</td>
                                                        <td>
                                                            <a href="/Tang//@phongkhachsan.id" class="btn btn-danger" title="Xoá">
                                                                <i class="fas fa-times-circle"></i>
                                                            </a>
                                                            <a href="/KyLuat//@phongkhachsan.id" class="btn btn-warning" title="Cập nhât">
                                                                <i class="fas fa-check-circle"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5">Không có tầng nhân viên nào cả!.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
     data-bs-backdrop="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body text-left">
                <div class="text-bg-success p-2">Thêm phòng khách sạn</div>
                <div class="border border-secondary-subtle" style="padding:10px 20px">
                    <form method="post" Action="/PhongKhachSan/ThemPhongKhachSan">
                        <div class="mb-3">
                            <label for="loaiphong" class="form-label">Loại phòng:</label>
                            <input type="text" name="loaiphong" id="loaiphong" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="giatientheogio" class="form-label">Gía tiền theo giờ:</label>
                            <input type="number" name="giatientheogio" id="giatientheogio" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="giatientheongay" class="form-label">Gía tiền theo ngày:</label>
                            <input type="number" name="giatientheongay" id="giatientheongay" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="idkhachsan" class="form-label">Tên khách sạn:</label>
                            <select id="idkhachsan" name="idkhachsan" class="form-control">
                                @if (Model.listKhachSan != null && Model.listKhachSan.Count > 0)
                                {
                                    foreach (var khachSan in Model.listKhachSan)
                                    {
                                        <option value="@khachSan.id">@khachSan.tenkhachsan</option>
                                    }
                                }
                                else
                                {
                                    <option value="" selected>Không có dữ liệu</option>
                                }
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary custom-btn-secondary" data-dismiss="modal">
                                Huỷ
                            </button>
                            <input type="submit" value="Thêm phòng cho khách sạn" class="btn btn-primary custom-button" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5);
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
