@Html.Partial("~/Views/layout/logo.cshtml")
<link href="~/css/site.css" rel="stylesheet" />
<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        @Html.Partial("~/Views/layout/navbar.cshtml")
        @Html.Partial("~/Views/layout/header.cshtml")
        <br />
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="row">
                        <div class="col-12">
                            <div class="fs-2 text-center">Nhận phòng</div>
                            <div class="border border-secondary-subtle" style="padding:10px 20px">
                                <form method="post" Action="/NhanPhong/CheckInNhanPhongOnline">
                                    <div class="row">

                                        <div class="col-6">
                                            <input type="hidden" name="idphong" id="idphong" value="@Model.datPhong.idphong" class="form-control" />
                                            <div class="mb-3">
                                                <label for="hovaten" class="form-label">Tên khách hàng:</label>
                                                <input type="text" name="hovaten" id="hovaten" value="@Model.datPhong.hovaten" class="form-control" />
                                            </div>
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email:</label>
                                                <input type="text" name="email" value="@Model.khachhang.email" id="email" class="form-control" />
                                            </div>
                                            <div class="mb-3">
                                                <label for="sodienthoai" class="form-label">Số điện thoại:</label>
                                                <input type="text" name="sodienthoai" value="@Model.khachhang.sodienthoai" id="sodienthoai" class="form-control" />
                                            </div>
                                            <div class="mb-3">
                                                <label for="cccd" class="form-label">CCCD:</label>
                                                <input type="text" name="cccd" value="@Model.khachhang.cccd" id="cccd" class="form-control" />
                                            </div>

                                        </div>
                                        <div class="col-6">
                                            <div class="table-responsive">
                                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Sản phẩm</th>
                                                            <th>Gía bán</th>
                                                            <th>Ảnh</th>
                                                            <th>Chọn</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model.listsanPham != null && Model.listsanPham.Count > 0)
                                                        {
                                                            @foreach (var sanpham in Model.listsanPham)
                                                            {
                                                                <tr>
                                                                    <td>@sanpham.tensanpham</td>
                                                                    <td>@string.Format("{0:N0} VNĐ", @sanpham.giaban)</td>
                                                                    <td><img src="@sanpham.image" width="50px" height="50px" alt=""></td>
                                                                    <td>
                                                                        <input type="checkbox" class="idsanpham" name="idsanpham" value="@sanpham.id">
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <p>Không có sản phẩm!</p>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary custom-button">
                                            <i class="fas fa-save"></i> Lưu
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
