@model Model.Models.Modeldata
@using PagedList.Mvc;
@using Auth0.ManagementApi.Paging;
<title>Phân trang ảo với Bootstrap --- dammio.com</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<div class="container">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ngày đưa vào</th>
                <th>Số lượng đưa vào</th>
                <th>ID Phòng</th>
                <th>Tên thiết bị</th>
                <th>Giá thiết bị</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PagedThietBiPhong != null && Model.PagedThietBiPhong.Count > 0)
            {
                int count = 1;
                foreach (var thietBiphong in Model.PagedThietBiPhong)
                {
                    <tr>
                        <td>@count</td>
                        <td>@thietBiphong.ngayduavao.ToString("dd/MM/yyyy")</td>
                        <td>@thietBiphong.soluongduavao</td>
                        <td>@thietBiphong.idphong</td>
                        <td>@thietBiphong.tenthietbi</td>
                        <td>@string.Format("{0:N0} VNĐ", @thietBiphong.giathietbi)</td>
                        <td>
                            <a href="/Tang//@thietBiphong.id" class="btn btn-danger" title="Xoá">
                                <i class="fas fa-times-circle"></i>
                            </a>
                            <a href="/KyLuat//@thietBiphong.id" class="btn btn-warning" title="Cập nhật">
                                <i class="fas fa-check-circle"></i>
                            </a>
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7">Không có dữ liệu để hiển thị.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 10,
            "lengthMenu": [5, 10, 25, 50, 100],
            "language": {
                "paginate": {
                    "next": '<i class="fas fa-chevron-right"></i>',
                    "previous": '<i class="fas fa-chevron-left"></i>'
                }
            }
        });
    });
</script>
