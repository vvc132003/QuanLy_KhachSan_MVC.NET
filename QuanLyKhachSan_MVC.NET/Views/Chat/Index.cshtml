<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    .messenger-container {
        display: flex;
        width: 1200px;
        height: 600px;
        position: fixed;
        right: 160px;
        bottom: 40px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .messenger-container #closeButton {
            position: absolute;
            top: 10px;
            right: 10px;
            border: none;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            cursor: pointer;
        }

        .messenger-container #toggleButton {
            position: absolute;
            bottom: 20px;
            right: 20px;
            z-index: 1;
        }

        .messenger-container .sidebars {
            width: 30%;
            padding: 20px;
            border-right: 1px solid #ccc;
        }

        .messenger-container .search-bar input[type="text"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .messenger-container .conversation-lists {
            overflow-y: auto;
            max-height: 530px;
        }

            .messenger-container .conversation-lists::-webkit-scrollbar {
                width: 0px;
            }

            .messenger-container .conversation-lists::-webkit-scrollbar-track {
                background: transparent;
            }

            .messenger-container .conversation-lists::-webkit-scrollbar-thumb {
                background-color: rgba(0, 0, 0, 0.3);
                border-radius: 10px;
            }

        .messenger-container .conversation {
            display: flex;
            align-items: center;
            padding: 15px;
            cursor: pointer;
            border-bottom: 1px solid #eee;
            font-size: 8px;
        }

            .messenger-container .conversation.active {
                background-color: #f1f1f1;
            }

            .messenger-container .conversation img {
                width: 40px;
                height: 40px;
                background-color: #ccc;
                border-radius: 50%;
                margin-right: 15px;
            }

        .messenger-container .details {
            flex: 1;
        }

            .messenger-container .details h3 {
                margin-bottom: 5px;
            }

        .messenger-container .chat {
            display: flex;
            flex-direction: column;
            width: 70%;
            padding: 20px;
            justify-content: space-between;
            height: 100%;
        }

        .messenger-container .message-input {
            display: flex;
            align-items: center;
            margin-bottom: -10px;
            margin-top: 10px;
        }

    #sendButton {
        background-color: #4CAF50;
        color: #fff;
        border: none;
        padding: 12px 20px;
        font-size: 14px;
        border-radius: 25px;
        cursor: pointer;
    }

        #sendButton:hover {
            background-color: #45a049;
        }

    #likeButton {
        background-color: #0084ff;
        color: #fff;
        border: none;
        padding: 12px 20px;
        font-size: 14px;
        border-radius: 25px;
        cursor: pointer;
    }

        #likeButton:hover {
            background-color: #0084ff;
        }

    .messenger-container .message-input input[type="text"] {
        position: relative;
        flex: 1;
        padding: 15px 30px 15px 15px;
        border: 2px solid #ccc;
        border-radius: 8px;
        margin-right: 10px;
        font-size: 14px;
    }

    .messenger-container .message-input .icon-inside-input {
        position: absolute;
        right: 110px;
        top: 94%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 25px;
        color: #0084ff;
    }

    .hover-content {
        display: none;
        position: absolute;
        top: 70%;
        left: 930px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 10px;
        z-index: 1;
        border-radius: 5px;
        width: 150px;
    }

        .hover-content i {
            margin: 5px;
            font-size: 20px;
            cursor: pointer;
            transition: color 0.3s;
        }

    .messenger-container .message-input button {
        padding: 5px 15px;
        border: none;
        border-radius: 4px;
        background-color: #0084ff;
        color: #fff;
        cursor: pointer;
    }

    .messenger-container .message-chat {
        overflow-y: auto;
        max-height: 500px;
    }

    .message-chat::-webkit-scrollbar {
        width: 0px;
    }

    .message-chat::-webkit-scrollbar-track {
        background: transparent;
    }

    .message-chat::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
    }

    .messenger-container .user-profile {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .messenger-container .profile-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 15px;
    }

    .messenger-container .user-profile h3 {
        font-size: 20px;
        margin: 0;
    }

    .messenger-container .message {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        clear: both;
        max-width: 60%;
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
        max-height: 67%;
    }

    .messenger-container .received,
    .messenger-container .sent {
        padding: 10px 15px;
        border-radius: 15px;
        min-height: 50px;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        /* Add some margin between messages */
        word-wrap: break-word;
    }

    .messenger-container .received {
        background-color: #d3d3d3;
        float: left;
        clear: both;
    }

    .messenger-container .sent {
        background-color: #0084ff;
        color: #fff;
        float: right;
        clear: both;
    }

    .time {
        font-size: 1px;
        color: #888;
        margin-left: auto;
    }

    .messenger-container p {
        font-size: 10px;
    }

    .messenger-container h3 {
        font-size: 20px;
    }
</style>
