<script>
    document.addEventListener('DOMContentLoaded', function () {
        const messageInput = document.getElementById('messageInput');
        const likeButton = document.getElementById('likeButton');
        const sendButton = document.getElementById('sendButton');

        messageInput.addEventListener('input', function () {
            if (messageInput.value.trim() !== '') {
                likeButton.style.display = 'none';
                sendButton.style.display = 'inline-block';
            } else {
                likeButton.style.display = 'inline-block';
                sendButton.style.display = 'none';
            }
        });
    });
    const iconInsideInput = document.querySelector('.icon-inside-input');
    const haha = document.getElementById('haha');

    iconInsideInput.addEventListener('click', function () {
        haha.style.display = haha.style.display === 'none' ? 'block' : 'none';
    });
    function insertIcon(icon) {
        var inputField = document.getElementById('messageInput');
        inputField.value += icon;
    }
</script>