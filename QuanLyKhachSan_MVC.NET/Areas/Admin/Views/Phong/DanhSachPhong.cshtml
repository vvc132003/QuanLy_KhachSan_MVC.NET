@model List<Model.Models.Modeldata>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

<link href="~/css/home.css" rel="stylesheet" />
<link href="~/css/morris.css" rel="stylesheet" />
<link href="~/css/c3.min.css" rel="stylesheet" />
<link href="~/css/dashboard1.css" rel="stylesheet" />
@await Html.PartialAsync("~/Areas/admin/Views/layout/logo.cshtml")
<link href="~/css/site.css" rel="stylesheet" />
<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        @await Html.PartialAsync("~/Areas/admin/Views/layout/navbar.cshtml")
        @await Html.PartialAsync("~/Areas/admin/Views/layout/header.cshtml")
        <br />
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <br />
                            <ul class="nav justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link btn btn-success me-2" href="/NhanVien/XuatEclcel">
                                        <i class="fas fa-file-excel"></i>
                                        Xuất excel
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary me-2" href="" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        <i class="fas fa-plus"></i>
                                        Thêm phòng
                                    </a>
                                </li>
                            </ul>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên khách sạn</th>
                                                <th>Số tầng</th>
                                                <th>Số phòng</th>
                                                <th>Số người</th>
                                                <th>Loại phòng</th>
                                                <th>Tình trạng phòng</th>
                                                <th>Gía tiền từng giờ</th>
                                                <th>Gía tiền từng ngày</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                int count = 1;
                                                foreach (var modeldata in Model)
                                                {
                                                    <tr id="row-@count">
                                                        <td>@count</td>
                                                        <td>@modeldata.khachSan.tenkhachsan</td>
                                                        <td>@modeldata.tang.tentang</td>
                                                        <td>@modeldata.phong.sophong</td>
                                                        <td>@modeldata.phong.songuoi</td>
                                                        <td>@modeldata.phong.loaiphong</td>
                                                        <td>@modeldata.phong.tinhtrangphong</td>
                                                        <td>@string.Format("{0:N0} VNĐ", modeldata.phong.giatientheogio)</td>
                                                        <td>@string.Format("{0:N0} VNĐ", modeldata.phong.giatientheongay)</td>
                                                        <td>
                                                            @if (modeldata.phong.tinhtrangphong == "có khách")
                                                            {
                                                                <a href="/admin/thuephong/chitietthuephong/?idphong=@modeldata.phong.id">
                                                                    <i class="fas fa-info-circle" style="color: red; font-size: 20px; margin-right: 5px;"></i>
                                                                    Thông tin thuê phòng
                                                                </a>
                                                                @* <a href="" data-bs-toggle="modal" data-bs-target="#exampleModal@(modeldata.phong.id)">
                                                                    <i class="fas fa-exchange-alt" style="color: blue; font-size: 20px; margin-right: 5px;"></i>
                                                                    Chuyển phòng
                                                                </a> *@
                                                            }
                                                            else if (modeldata.phong.tinhtrangphong == "còn trống")
                                                            {
                                                                <a href="/admin/thuephong/datphongdon/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 10px; color: #00FF00;" class="fas fa-bed"></i>
                                                                    Đặt phòng khách lẽ
                                                                </a>
                                                                <a href="/admin/thuephong/datphongdoan">
                                                                    <i style="font-size: 20px; margin-right: 10px; color: #00FF00;" class="fas fa-users"></i>
                                                                    Đặt phòng khách đoàn
                                                                </a>
                                                                <a href="/admin/phong/capnhattrangthaiphong/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 14px;color: #8B4513;" class="fas fa-wrench"></i>
                                                                    Sửa phòng
                                                                </a>
                                                            }
                                                            else if (modeldata.phong.tinhtrangphong == "đã đặt")
                                                            {
                                                                <a href="/admin/nhanphong/nhanphongonline/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 14px" class="fas fa-check-circle"></i>
                                                                    Check nhận phòng
                                                                </a>
                                                                <a href="/admin/huydatphong/huydatphong/?idphong=@modeldata.phong.id">
                                                                    <i class="fas fa-info-circle" style="color: red; font-size: 20px; margin-right: 5px;"></i>
                                                                    Huỷ đặt phòng
                                                                </a>
                                                            }
                                                            else if (modeldata.phong.tinhtrangphong == "đang sửa chữa")
                                                            {
                                                                <a href="/admin/phong/capnhattrangthaiphong/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 2px; color: blue;" class="fas fa-check"></i>
                                                                    Hoàn tất sửa chữa
                                                                </a>
                                                            }
                                                            else if (modeldata.phong.tinhtrangphong == "chưa dọn")
                                                            {
                                                                <a href="/admin/phong/capnhattrangthaiphong/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 10px; color: blue;" class="fas fa-check"></i>
                                                                    Dọn xong
                                                                </a>
                                                                <a href="/admin/phong/capnhattrangthaiphong/?idphong=@modeldata.phong.id">
                                                                    <i style="font-size: 20px; margin-right: 10px" class="fas fa-wrench"></i>
                                                                    Sửa phòng
                                                                </a>
                                                            }
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5">Không có tầng nhân viên nào cả!.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
     data-bs-backdrop="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body text-left">
                <div class="text-bg-success p-2">Thêm khách sạn</div>
                <div class="border border-secondary-subtle" style="padding:10px 20px">
                    <form method="post" Action="/admi/KhachSan/ThemKhachSan">
                        <div class="mb-3">
                            <label for="tenkhachsan" class="form-label">Tên khách sạn:</label>
                            <input type="text" name="tenkhachsan" id="tenkhachsan" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="thanhpho" class="form-label">Thành phố:</label>
                            <input type="text" name="thanhpho" id="thanhpho" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="diachi" class="form-label">Địa chỉ:</label>
                            <input type="text" name="diachi" id="diachi" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="quocgia" class="form-label">Quốc gia:</label>
                            <input type="text" name="quocgia" id="quocgia" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" name="email" id="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="sodienthoai" class="form-label">Số điện thoại:</label>
                            <input type="text" name="sodienthoai" id="sodienthoai" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="loaihinh" class="form-label">Loại hình:</label>
                            <input type="text" name="loaihinh" id="loaihinh" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="giayphepkinhdoanh" class="form-label">Giay phép kinh doanh:</label>
                            <input type="text" name="giayphepkinhdoanh" id="giayphepkinhdoanh" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="ngaythanhlap" class="form-label">Ngày thành lập:</label>
                            <input type="datetime-local" name="ngaythanhlap" id="ngaythanhlap" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="thoigiannhanphong" class="form-label">Thời gian checkIn:</label>
                            <input type="time" name="thoigiannhanphong" id="thoigiannhanphong" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="phuthunhanphong" class="form-label">% Phụ thu checkIn:</label>
                            <input type="number" name="phuthunhanphong" id="phuthunhanphong" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="thoigianra" class="form-label">Thời gian checkOut:</label>
                            <input type="time" name="thoigianra" id="thoigianra" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="phuthutraphong" class="form-label">% Phụ thu checkOut:</label>
                            <input type="number" name="phuthutraphong" id="phuthutraphong" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="mota" class="form-label">Mô tả:</label>
                            <input type="text" name="mota" id="mota" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary custom-btn-secondary" data-dismiss="modal">
                                Huỷ
                            </button>
                            <button type="submit" class="btn btn-primary custom-button">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5);
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
