<script>
    $(document).ready(function () {
        phongIds.forEach(function (idPhong) {
            getCustomerInfo(idPhong);
        });
    });

    function getCustomerInfo(idPhong) {
        $.ajax({
            url: `/phong/KhachHangbyiddatPhong`,
            type: 'GET',
            data: { idPhong: idPhong },
            success: function (response) {
                const khachHang = response.khachHang;
                $('#hovaten-' + idPhong).text(khachHang.hovaten);
            },
            error: function (xhr, status, error) {
                console.error(error);
                $('#hovaten-' + idPhong).text(`Error: ${xhr.responseText}`);
            }
        });
    }
</script>