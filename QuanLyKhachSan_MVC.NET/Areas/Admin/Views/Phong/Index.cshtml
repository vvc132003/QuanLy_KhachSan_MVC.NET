@functions {
    public string GetTinhTrangPhong(string trangthai)
    {
        switch (trangthai)
        {
            case "có khách":
                return "cokhach";
            case "còn trống":
                return "controng";
            case "đang sửa chữa":
                return "dangsua";
            case "đã đặt":
                return "dadat";
            case "chưa dọn":
                return "chuadon";
            default:
                return "other";
        }
    }
}
